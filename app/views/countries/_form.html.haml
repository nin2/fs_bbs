= form_for @country, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :country_area_id, :class => 'control-label'
    .controls
      = f.number_field :country_area_id, :class => 'number_field'
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), countries_path, :class => 'btn'
