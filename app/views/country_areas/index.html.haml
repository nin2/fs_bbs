- model_class = CountryArea
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @country_areas.each do |country_area|
      %tr
        %td= link_to country_area.id, country_area_path(country_area)
        %td= country_area.name
        %td=l country_area.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_country_area_path(country_area), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), country_area_path(country_area), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_country_area_path, :class => 'btn btn-primary'
